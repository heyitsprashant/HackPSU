# Environment Variables Template
# Copy this file to .env.local and replace with your actual API keys

# Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# ElevenLabs API key for text-to-speech (optional)
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# Backend URL (default for local development)
BACKEND_URL=http://localhost:8000

# OpenRouter API key from: https://openrouter.ai/keys
# Used for Whisper speech-to-text and as fallback when Gemini quota is exceeded
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Other environment variables
DATABASE_URL=your_database_url
NEXTAUTH_SECRET=your_nextauth_secret
